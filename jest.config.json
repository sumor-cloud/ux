{
  "maxWorkers": 1,
  "reporters": [
    "default",
    ["jest-html-reporter", {
      "pageTitle": "Test Report",
      "outputPath": "./output/unit/index.html"
    }]
  ],
  "coverageThreshold": {
    "global": {
      "branches": 0,
      "functions": 0,
      "lines": 0,
      "statements": 0
    }
  },
  "coverageDirectory":"output/coverage",
  "coverageReporters": ["text-summary", "html"],
  "collectCoverageFrom": ["src/**/*.{js,jsx}"],
  "testPathIgnorePatterns": [
    "node_modules",
    "output",
    "static",
    "dist",
    "tmp"
  ],
  "coveragePathIgnorePatterns": [
    "node_modules",
    "output",
    "static",
    "dist",
    "tmp"
  ]
}